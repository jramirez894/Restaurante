<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_producto_Alerta"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/photo"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textNombreProducto_Alerta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/textDescripcionProducto_Alerta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageMenos_Alerta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_minus"
                    android:layout_margin="3dp"/>

                <ImageView
                    android:id="@+id/imageMas_Alerta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_plus"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/textCantidad_Alerta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas:"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@android:color/background_dark"/>


        <EditText
            android:id="@+id/editTextNotas_Alerta"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="...."
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>


</LinearLayout>
